@model List<RoleViewModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    ViewBag.Title = "Edit Roles";
    var userId = ViewBag.UserId;
    var email = ViewBag.Email;
}

<h2>Edit Roles for @email</h2>

<form asp-action="EditUserRoles" asp-route-userId="@userId" method="post">
    <div class="form-group">
        @foreach (var role in Model)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="[@Model.IndexOf(role)].IsSelected" value="true" @(role.IsSelected ? "checked" : "") />
                <input type="hidden" name="[@Model.IndexOf(role)].RoleName" value="@role.RoleName" />
                <label class="form-check-label">@role.RoleName</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-success">Update Roles</button>
    <a class="btn btn-secondary" asp-action="ManageUsers">Cancel</a>
</form>

