@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center text-center">
        <div class="col-lg-8">

            <div class="p-5 shadow rounded bg-light">
                <img src="/images/imt-logo.png" alt="IMT Enugu Logo" class="img-fluid mb-4" style="max-height: 150px;" />

                <h1 class="display-4 mb-3">Welcome to IMT Enugu</h1>
                <p class="lead mb-4">The Student Management Portal. Easily manage students, lecturers, courses, and assignments.</p>

                <a class="btn btn-primary btn-lg me-2" asp-controller="Account" asp-action="Login">Login</a>
                <a class="btn btn-outline-secondary btn-lg" asp-controller="Student" asp-action="CheckAdmission">Check Admission</a>
            </div>

        </div>
    </div>
</div>
