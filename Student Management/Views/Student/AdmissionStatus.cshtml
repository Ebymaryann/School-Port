@model Student_Management.Entities.UserAccount

@{
    ViewData["Title"] = "Admission Status";
    string statusClass = "";
    string statusMessage = "";

    switch (Model.AdmissionStatus)
    {
        case Student_Management.Entities.ApplicationStatus.Accepted:
            statusClass = "text-success";
            statusMessage = "🎉 Congratulations! Your admission has been ACCEPTED.";
            break;
        case Student_Management.Entities.ApplicationStatus.Pending:
            statusClass = "text-warning";
            statusMessage = "⏳ Your application is still PENDING. Please check back later.";
            break;
        case Student_Management.Entities.ApplicationStatus.Rejected:
            statusClass = "text-danger";
            statusMessage = "❌ We're sorry. Your admission was REJECTED.";
            break;
    }
}

<div class="container mt-5 text-center">
    <h2 class="@statusClass">@ViewData["Title"]</h2>
    <p class="mt-3">@statusMessage</p>

    <hr />
    <p><strong>Application Number:</strong> @Model.ApplicationNumber</p>
    <p><strong>Full Name:</strong> @Model.FirstName @Model.LastName</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>
