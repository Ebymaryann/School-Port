@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .sidebar {
            min-height: 100vh;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
        }

        .nav-link i {
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar p-3">
                <h5 class="mb-4">Admin Panel</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="registrationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-people"></i> Users Management
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="registrationDropdown">
                            <li>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="ManageUsers">
                                    <i class="bi bi-person-lines-fill"></i> Manage Users
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-person"></i> Manage Students
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="registrationDropdown2" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-journal-plus"></i> Registration
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="registrationDropdown2">
                            <li>
                                <a class="dropdown-item" asp-controller="Student" asp-action="Registration">
                                    <i class="bi bi-person-plus"></i> Register Student
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="RegisterLecturer">
                                    <i class="bi bi-person-video3"></i> Register Lecturer
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="AddCourse">
                                    <i class="bi bi-journal-bookmark"></i> Add Course
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="AddDepartment">
                                    <i class="bi bi-building"></i> Add Department
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item mt-3">
                        <a class="nav-link" asp-controller="Assignment" asp-action="Index">
                            <i class="bi bi-file-earmark-text"></i> Manage Assignments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Assignment" asp-action="Submissions">
                            <i class="bi bi-inbox"></i> View Submissions
                        </a>
                    </li>

                    <li class="nav-item mt-3">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>

            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
